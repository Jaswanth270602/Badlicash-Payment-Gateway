APP_NAME="BadliCash"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=badlicash
DB_USERNAME=badlicash
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@badlicash.test"
MAIL_FROM_NAME="${APP_NAME}"

# BadliCash specific configuration
BADLICASH_MODE=test
BADLICASH_API_VERSION=v1
BADLICASH_FEE_PERCENTAGE=2.5
BADLICASH_FEE_FLAT=0.30
BADLICASH_DEFAULT_CURRENCY=USD

# Bank Provider Configuration
BANK_PROVIDER_SANDBOX_URL=http://localhost/api/sandbox/bank
BANK_PROVIDER_LIVE_URL=https://api.bank-provider.com
BANK_PROVIDER_API_KEY=
BANK_PROVIDER_API_SECRET=

# Webhook Configuration
WEBHOOK_MAX_RETRY_ATTEMPTS=5
WEBHOOK_RETRY_DELAY_SECONDS=60

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Security
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000

# Pagination
DEFAULT_PER_PAGE=10
MAX_PER_PAGE=100

# Logging
TURNONLOGS=false

